@model cms.ar.xarchitecture.de.Models.Wrapper.SceneSubmissionValues

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Scene Data</h1>

@*<h4>Scene</h4>*@

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Create">Create Scene</a>
            </th>
            <th>
                <a asp-action="Index">View Scene List</a>
            </th>
        </tr>
    </thead>
    <tbody>
</table>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SceneName" class="control-label"></label>
                <input asp-for="SceneName" class="form-control" />
                <span asp-validation-for="SceneName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Select a Marker. <br /> Leave blank for auto generated QR-Code</label>
                <input asp-for="FileToUpload" type="file" class="btn btn-primary" />
                <span asp-validation-for="FileToUpload"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

