@model cms.ar.xarchitecture.de.Controllers.Frontend.SceneSubmissionValues

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Scene</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SceneName" class="control-label"></label>
                <input asp-for="SceneName" class="form-control" />
                <span asp-validation-for="SceneName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Select a Marker. Leave blank for auto generated QR-Code</label>
                <input asp-for="FileToUpload" type="file" class="btn btn-primary" />
                <span asp-validation-for="FileToUpload"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

