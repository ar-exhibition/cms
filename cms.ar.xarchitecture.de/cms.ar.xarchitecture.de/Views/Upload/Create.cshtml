@model cms.ar.xarchitecture.de.Models.Wrapper.AssetSubmissionValues

@{
    ViewData["Title"] = "Upload your 3D Model";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Upload here</h1>

<h4>SceneAsset</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SubmitFile" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="creator" class="control-label"></label>
                <input asp-for="creator" class="form-control" />
                <span asp-validation-for="creator" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="programme" class="control-label"></label>
                <select asp-for="programme" class="form-control" asp-items="ViewBag.Programme"></select>
            </div>

            <div class="form-group">
                <label asp-for="course" class="control-label"></label>
                <select asp-for="course" class="form-control" asp-items="ViewBag.CourseName"></select>
            </div>

            <div class="form-group">
                <label asp-for="assetName" class="control-label"></label>
                <input asp-for="assetName" class="form-control" />
                <span asp-validation-for="assetName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Select your model!</label>
                <input asp-for="FileToUpload" type="file" class="btn btn-primary" />
                <span asp-validation-for="FileToUpload"></span>

                @*<input type="file" name="FileToUpload" class="btn btn-primary" />*@
                @*<input asp-for="file" type="file" value="file" class="btn btn-primary" />*@
            </div>

            <div class="form-group">
                <input type="submit" value="Submit Model" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>