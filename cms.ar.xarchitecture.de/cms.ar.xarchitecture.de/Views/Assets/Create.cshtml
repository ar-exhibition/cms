                <label asp-for="ThumbnailFilename" class="control-label"></label>
                <select asp-for="ThumbnailFilename" class ="form-control" asp-items="ViewBag.ThumbnailUuid"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
